<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_editext_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_input_search_seat"
                style="@style/editText_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="6dp"
                android:drawableStart="@mipmap/search"
                android:hint="例如:0121055"
                android:padding="6dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_clean_input_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/search_clear_text"
            android:visibility="invisible" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="4dp"
            android:background="@color/thin_green" />

        <TextView
            android:id="@+id/tv_search_seat_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="搜索"
            android:textSize="20dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_search_seat_bottom_history_or_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

    </FrameLayout>
</LinearLayout>