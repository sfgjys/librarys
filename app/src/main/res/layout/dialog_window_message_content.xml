<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_reading_seat_order_dialog_background_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tv_dialog_top_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/iv_dialog_right_top_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/reading_room_seat_order_dialog_cancel" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_window_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_reading_seat_order_dialog_background_bottom"
        android:gravity="center"
        android:padding="14dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="20dp" />

</LinearLayout>