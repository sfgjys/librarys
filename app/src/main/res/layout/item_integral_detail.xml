<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/my_center_bottom_part_my_order" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_get_or_point_source_describe"
                    style="@style/integral_detail_item_top_text_style"
                    android:text="获得积分 : "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_get_or_point_source_value"
                    style="@style/integral_detail_item_top_text_style"
                    android:text="0"
                    android:textColor="@color/thin_green" />

                <TextView
                    android:id="@+id/tv_minus_or_add_point_describe"
                    style="@style/integral_detail_item_top_text_style"
                    android:text=" ; 消耗积分 : "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_minus_or_add_point_value"
                    style="@style/integral_detail_item_top_text_style"
                    android:text="40"
                    android:textColor="@color/expend_integral_number_color" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_get_or_expend_integral_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="2016-09-09 09:41:04"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/thin_gray" />
</LinearLayout>