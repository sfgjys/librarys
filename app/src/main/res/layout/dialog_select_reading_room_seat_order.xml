<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_reading_seat_order_dialog_background_top"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前预约位置"
            android:textColor="@color/white"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/iv_order_seat_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/reading_room_seat_order_dialog_cancel" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_reading_seat_order_dialog_background_bottom"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tv_order_seat_dialog_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约人 : 少正解"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_order_seat_dialog_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="学好 : 0154156146"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/thin_green"
                android:padding="6dp"
                android:text="开始"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_order_seat_dialog_selelct_start_time"
                style="@style/editText_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="设置预约开始时间"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_seat_dialog_cancel_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@color/thin_gray"
                android:gravity="center"
                android:padding="6dp"
                android:text="取消预约"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_order_seat_dialog_make_sure_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@color/thin_green"
                android:gravity="center"
                android:padding="6dp"
                android:text="确认预约"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>